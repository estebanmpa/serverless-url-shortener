{
  "name": "url-shortener-server",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist .aws-sam",

    "sam:build": "sam build",
    "sam:deploy": "sam deploy --guided",
    "sam:local": "sam local start-api",
    "sam:invoke:create": "sam local invoke CreateShortUrlFunction --event events/create-url.json",
    "sam:invoke:redirect": "sam local invoke GetRedirectFunction --event events/redirect.json",
    "package": "yarn run build && yarn run sam:build",
    "deploy": "yarn run package && sam deploy",
    "local": "yarn run build && yarn run sam:local"
  },
    "dependencies": {
      "@aws-sdk/client-dynamodb": "^3.700.0",
      "@aws-sdk/lib-dynamodb": "^3.700.0",
      "nanoid": "^5.0.0",
      "esbuild": "^0.19.0"
    },
    "devDependencies": {
      "@types/aws-lambda": "^8.10.138",
      "@types/node": "^20.10.0",
      "typescript": "^5.4.0"
    }
}